<Window x:Class="FoneNumSort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Счетчик номеров" Height="350" Width="600" MaxWidth="600" MaxHeight="350">
    <Grid>
        <Button x:Name="BtnBase" Content="Выбор пути" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="100" Click="BtnBase_Click"/>
        <Label x:Name="PathBaseFile" Content="Путь до файлов:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="474" Height="40"/>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Margin="10,287,0,0" VerticalAlignment="Top" Width="100" Click="Start_Click"/>
        <TextBox x:Name="OutText" HorizontalAlignment="Left" Height="202" Margin="10,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="572"/>
        <ProgressBar x:Name="ProgBar" HorizontalAlignment="Left" Height="20" Margin="115,287,0,0" VerticalAlignment="Top" Width="467"/>
        <Button x:Name="Err_btn" Content="Очистка по одному" HorizontalAlignment="Left" Margin="460,55,0,0" VerticalAlignment="Top" Width="122" Click="Err_btn_Click"/>

    </Grid>
</Window>
